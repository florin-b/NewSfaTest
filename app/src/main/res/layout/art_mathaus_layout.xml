<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dip"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageview_art"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:scaleType="center" />

    <TextView
        android:id="@+id/textview_nume"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:gravity="center_horizontal"
        android:lines="3"
        android:maxLines="3"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:text=""
        android:textColor="#2471a3"
        android:textSize="17sp"
        android:typeface="sans" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_pret"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:layout_weight="0.2"
            android:gravity="left|bottom"
            android:textColor="@color/artRowColor1"
            android:textSize="16sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textview_stoc"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="5dip"
            android:layout_weight="0.3"
            android:gravity="center|bottom"
            android:textColor="#1e8449"
            android:textSize="16sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/buttonAdd"
            style="@style/ok_button"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/cancel_button_style"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:text="Detalii" />
    </LinearLayout>

</LinearLayout>