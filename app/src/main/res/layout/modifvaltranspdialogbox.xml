<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutModifValTrasnpClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/labelValTransp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="Transport: "
            android:textColor="@color/detColor1"
            android:textSize="18sp"
            android:typeface="serif" />

        <EditText
            android:id="@+id/txtValTransp"
            android:layout_width="100dp"
            android:layout_height="45dip"
            android:layout_marginLeft="10dp"
            android:inputType="number|numberDecimal"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/editTextColor1"
            android:textSize="18sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/txtMonTransp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="RON"
            android:textColor="@color/detColor1"
            android:textSize="18sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/txtTranspSAP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:gravity="right"
            android:layout_marginRight="5dip"
            android:textColor="@color/detColor6"
            android:textSize="18sp"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutArticoleTransp"
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:layout_marginTop="25dip"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/listArticoleTransp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnOkTransp"
            style="@style/ok_button"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0.3"
            android:background="@drawable/ok_button_style"
            android:text="Ok" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/btnCancelTransp"
            style="@style/ok_button"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0.3"
            android:background="@drawable/cancel_button_style"
            android:text="Inchide" />
    </LinearLayout>

</LinearLayout>