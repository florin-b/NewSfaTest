<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dip"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="30dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="19sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textCostMinim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:textSize="19sp"
            android:typeface="sans"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutCostMacara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:text="Cost macara:"
            android:textSize="19sp"
            android:typeface="sans" />

        <EditText
            android:id="@+id/valoareDescarcare"
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:inputType="number|numberDecimal"
            android:maxLength="5"
            android:textColor="#8B7E66"
            android:textSize="19sp"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnOkCmd"
            style="@style/ok_button"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_gravity="left"
            android:layout_weight="0.2"
            android:background="@drawable/ok_button_style"
            android:paddingLeft="40dip"
            android:paddingRight="40dip"
            android:text="Da" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.12" />

        <Button
            android:id="@+id/btnCancelCmd"
            style="@style/ok_button"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_gravity="right"
            android:layout_weight="0.2"
            android:background="@drawable/cancel_button_style"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:text="Nu" />
    </LinearLayout>

</LinearLayout>