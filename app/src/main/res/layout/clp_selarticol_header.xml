<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="1dip"
    android:rotation="180" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="45dip"
            android:layout_weight="0.005" />

        <ToggleButton
            android:id="@+id/tglTipArtClp"
            style="@style/button_text_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|bottom"
            android:layout_weight="0.07"
            android:background="@drawable/button_style_5"
            android:textOff="Articol"
            android:textOn="Sintetic" />

        <ToggleButton
            android:id="@+id/togglebuttonClp"
            style="@style/button_text_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|bottom"
            android:layout_weight="0.07"
            android:background="@drawable/button_style_5"
            android:textOff="Nume"
            android:textOn="Cod" />

        <EditText
            android:id="@+id/txtNumeArtClp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|bottom"
            android:layout_weight="0.25"
            android:background="@drawable/edittext_style_1"
            android:inputType="textNoSuggestions"
            android:maxLength="30"
            android:singleLine="true"
            android:textColor="@color/editTextColor1"
            android:typeface="monospace" />

        <Button
            android:id="@+id/articoleBtnClp"
            style="@style/button_text_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="0.07"
            android:background="@drawable/button_style_1"
            android:text="@string/strCauta" />

        <Spinner
            android:id="@+id/spinnerDepozClp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|bottom"
            android:layout_weight="0.1"
            android:background="@drawable/dropdown_style_1"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/listArticole"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:choiceMode="singleChoice"
            android:dividerHeight="1.0sp"
            android:drawSelectorOnTop="false" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/resLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dip"
            android:layout_weight="0.3"
            android:orientation="vertical" >

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textNumeArticolClp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text=""
                    android:textColor="@color/detColor1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textCodArticolClp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text=""
                    android:textColor="@color/detColor1"
                    android:textSize="16sp"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/labelStocClp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dip"
                    android:gravity="right"
                    android:text="Stoc"
                    android:textColor="@color/detColor2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textStocClp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="0.2"
                        android:gravity="right"
                        android:textColor="@color/detColor2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                    <TextView
                        android:id="@+id/textUmClp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.05"
                        android:gravity="right"
                        android:textColor="@color/detColor2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:typeface="monospace" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="45dip"
                    android:layout_weight="0.005" />

                <TextView
                    android:id="@+id/labelCantArtClp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_weight="0.07"
                    android:gravity="center|left"
                    android:text="Cantitate"
                    android:textColor="@color/detColor1"
                    android:textSize="17sp"
                    android:typeface="sans" />

                <EditText
                    android:id="@+id/txtCantArtClp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/edittext_style_1"
                    android:gravity="right"
                    android:inputType="number|numberDecimal"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/editTextColor1"
                    android:typeface="monospace" />

                <Spinner
                    android:id="@+id/spinnerUMClp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.09"
                    android:background="@drawable/dropdown_style_1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:typeface="sans" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="45dip"
                    android:layout_weight="0.20" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layoutGreutate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/labelGreutate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:text="Greutate unitara:"
                    android:textColor="@color/detColor1"
                    android:textSize="17sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/textValoareGreutate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="20dip"
                    android:gravity="center|left"
                    android:textColor="@color/detColor1"
                    android:textSize="17sp"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dip"
                android:gravity="right"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/saveArtBtnClp"
                    style="@style/button_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:background="@drawable/button_style_1"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:text="@string/strAdauga" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>