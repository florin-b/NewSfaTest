<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backColorArtList"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textNrCrt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_weight="0.03"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/rowColor1"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textNumeArt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_weight="0.4"
            android:textColor="@color/rowColor1"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textCantArt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.1"
            android:gravity="right"
            android:textColor="@color/detColor1"
            android:textSize="15sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textUmArt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.05"
            android:gravity="right"
            android:textColor="@color/detColor1"
            android:textSize="15sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textProcAprobModif"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.03" />

        <TextView
            android:id="@+id/textCodArt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/rowColor1" />

        <TextView
            android:id="@+id/textDepozit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.3"
            android:textColor="@color/rowColor1"
             />

        <TextView
            android:id="@+id/textZDIS"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/textMultipModif"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/textValArtM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/textPretArt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.1"
            android:gravity="right"
            android:textColor="@color/cmpColor1"
            android:textSize="15sp"
            android:typeface="monospace"
             />

        <TextView
            android:id="@+id/textMonedaArt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.05"
            android:gravity="right"
            android:text="RON"
            android:textColor="@color/cmpColor1"
            android:textSize="15sp"
            android:typeface="sans"
             />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

	<TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.03" />
        
        <TextView
            android:id="@+id/textProcFact"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/textStatusArt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.4"
            android:textColor="@color/statusCmdColor"
            android:textSize="13sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textAlertUsr"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/textProcRed"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_weight="0.1"
            android:gravity="right"
            android:textColor="@color/discountColor1"
            android:textSize="15sp"
            android:typeface="monospace"
             />

        <TextView
            android:id="@+id/labelProc"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_weight="0.05"
            android:gravity="right"
            android:text="%"
            android:textColor="@color/discountColor1"
            android:textSize="15sp"
            android:typeface="monospace"
             />
    </LinearLayout>

</LinearLayout>