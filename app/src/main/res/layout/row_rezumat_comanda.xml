<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="1dip"
    android:paddingBottom="1dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="10dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textNrComanda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:textColor="@color/artRowColor1"
            android:textSize="17sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <ImageButton
            android:id="@+id/stergeComandaBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="right"
            android:src="@drawable/delete_32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textNumeArticole"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.85"
            android:gravity="left|top"
            android:textColor="@color/antetColor1"
            android:textSize="17sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textCantArticole"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.15"
            android:gravity="right|top"
            android:textColor="@color/antetColor1"
            android:textSize="17sp"
            android:typeface="monospace" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textFurnizor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="0.15"
            android:gravity="left"
            android:textColor="@color/rowColor1"
            android:textSize="17sp"
            android:typeface="sans" />


        <LinearLayout
            android:id="@+id/layoutTransport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="0.2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textTipTransp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_weight="0.1"
                android:gravity="left"
                android:text="Transp: "
                android:textColor="@color/rowColor1"
                android:textSize="17sp"
                android:typeface="sans" />

            <Spinner
                android:id="@+id/spinnerTransport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginBottom="2dp"
                android:layout_weight="0.1"
                android:gravity="left" />

            <TextView
                android:id="@+id/tipTransport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_weight="0.2"
                android:gravity="left"
                android:textColor="@color/rowColor1"
                android:textSize="17sp"
                android:typeface="sans" />


        </LinearLayout>

        <TextView
            android:id="@+id/textTransport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.15"
            android:gravity="left"
            android:textColor="@color/rowColor1"
            android:textSize="17sp"
            android:typeface="sans" />



        <ImageButton
            android:id="@+id/btnPretTransport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="right"
            android:src="@drawable/modify_30" />


        <TextView
            android:id="@+id/textTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_weight="0.2"
            android:gravity="right"
            android:textColor="@color/rowColor1"
            android:textSize="17sp"
            android:textStyle="bold"
            android:typeface="sans" />
    </LinearLayout>

</LinearLayout>