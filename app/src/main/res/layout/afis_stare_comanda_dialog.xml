<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radioToate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:checked="true"
            android:text="Toate comenzile"
            android:textColor="@color/detColor1"
            android:textSize="17sp"
            android:typeface="sans" >
        </RadioButton>

        <RadioButton
            android:id="@+id/radioTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="60dip"
            android:checked="false"
            android:text="Comenzi client cu nr. telefon:"
            android:textColor="@color/detColor1"
            android:textSize="17sp"
            android:typeface="sans" >
        </RadioButton>
    </RadioGroup>

    <EditText
        android:id="@+id/text_telefon_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:inputType="number"
        android:maxLength="10"
        android:typeface="monospace"
        android:textSize="19sp"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.9" />

        <Button
            android:id="@+id/btnOkClnt"
            style="@style/ok_button"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_gravity="right"
            android:layout_margin="10dip"
            android:background="@drawable/cancel_button_style"
            android:paddingLeft="40dip"
            android:paddingRight="40dip"
            android:text="Afiseza" />
    </LinearLayout>

</LinearLayout>