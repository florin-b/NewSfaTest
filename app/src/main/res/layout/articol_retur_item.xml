<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dip" >

        <TextView
            android:id="@+id/textCrt"
            android:layout_width="25dip"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dip"
            android:textColor="@color/detColor11"
            android:textSize="17sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textNumeArticol"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:textColor="@color/listArticol"
            android:textSize="17sp"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <View
            android:layout_width="30dip"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textCodArticol"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dip"
            android:layout_weight="0.5"
            android:textColor="@color/listCodArticol"
            android:textSize="14sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textCantitate"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="right"
            android:textColor="#458B00"
            android:textSize="17sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textUm"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="10dip"
            android:layout_weight="0.1"
            android:textColor="#458B00"
            android:textSize="17sp"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dip" >

        <View
            android:layout_width="30dip"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/labelRetur"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="0.5"
            android:gravity="right"
            android:text="Retur"
            android:textColor="#EE7600"
            android:textSize="16sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textCantitateRetur"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="right"
            android:textColor="#EE7600"
            android:textSize="17sp"
            android:typeface="monospace" />

        <View
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="0.1" />
    </LinearLayout>

</LinearLayout>