<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/clp_border_1" >

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <SlidingDrawer
                android:id="@+id/articoleSlidingDrawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:content="@+id/contentLayout"
                android:handle="@+id/slideButton"
                android:orientation="vertical"
                android:padding="1dip"
                android:rotation="180" >

                <RelativeLayout
                    android:id="@+id/slideButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#E0E0E0" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="50dip"
                        android:rotation="180"
                        android:text="Selectie articole"
                        android:textColor="#BABABA"
                        android:textSize="16sp"
                        android:typeface="serif" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:contentDescription="abc"
                        android:src="@drawable/sliding_up_down" />
                </RelativeLayout>

                <include
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/clp_selarticol_header" />
            </SlidingDrawer>
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:orientation="vertical" >

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layoutTotalGreutate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="60dip"
                android:orientation="horizontal" >

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0" >
                </View>

                <TextView
                    android:id="@+id/textTotalGreutate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dip"
                    android:textColor="@color/color_light_green"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layoutHeaderArtClp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#96CE96"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textNrCrt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.05"
                    android:gravity="left"
                    android:text="Nr."
                    android:textColor="@color/headerColor"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textCodArt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1"
                    android:gravity="left"
                    android:text="Cod"
                    android:textColor="@color/headerColor"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textNumeArt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.25"
                    android:gravity="left"
                    android:text="Nume"
                    android:textColor="@color/headerColor"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textCantArt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1"
                    android:gravity="right"
                    android:text="Cant."
                    android:textColor="@color/headerColor"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textDepozit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0.0"
                    android:textSize="1sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/textUmBaza"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.05"
                    android:gravity="right"
                    android:text="Um"
                    android:textColor="@color/headerColor"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textGreutate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.05"
                    android:gravity="right"
                    android:text="Greutate"
                    android:textColor="@color/headerColor"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textUmGreutate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.05"
                    android:gravity="right"
                    android:text="Um greutate"
                    android:textColor="@color/headerColor"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05"
                    android:textSize="1sp" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layoutDetArtClp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/listArtCmdClp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:choiceMode="singleChoice"
                    android:drawSelectorOnTop="true" />
            </LinearLayout>
        </LinearLayout>

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            layout="@layout/bottom_save_clp" />
    </FrameLayout>

</RelativeLayout>