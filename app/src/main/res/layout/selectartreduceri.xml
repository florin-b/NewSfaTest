<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="45dip"
                        android:layout_weight="0.005" />

                <Button
                        android:id="@+id/triStateBtn"
                        android:text="Articol"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left|bottom"
                        style="@style/button_text_1"
                        android:background="@drawable/button_style_5"
                        android:layout_weight="0.07" />


                <ToggleButton
                        android:id="@+id/togglebutton"
                        android:textOn="Cod"
                        android:textOff="Nume"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left|bottom"
                        android:layout_weight="0.07"
                        style="@style/button_text_1"
                        android:background="@drawable/button_style_5" />

                <EditText
                        android:id="@+id/txtNumeArt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left|bottom"
                        android:layout_weight="0.25"
                        android:background="@drawable/edittext_style_1"
                        android:textColor="@color/editTextColor1"
                        android:inputType="textNoSuggestions"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:typeface="monospace" />

                <Button
                        android:id="@+id/articoleBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_weight="0.07"
                        android:background="@drawable/button_style_1"
                        style="@style/button_text_1"
                        android:text="@string/strCauta" />



        </LinearLayout>

        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <ListView
                        android:id="@android:id/list"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.40"
                        android:choiceMode="singleChoice"
                        android:drawSelectorOnTop="false" />


                <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.6"
                        android:orientation="vertical">

                        <TextView
                                android:id="@+id/textNumeArticol"
                                android:typeface="sans"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_gravity="left"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/detColor1" />


                        <LinearLayout
                                xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                

                                <TextView
                                        android:id="@+id/textCodArticol"
                                        android:typeface="sans"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:layout_gravity="left"
                                        android:layout_width="0dip"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.1"
                                        android:textColor="@color/detColor1" />
                                <TextView
                                        android:id="@+id/textSintetic"
                                        android:typeface="sans"
                                        android:textSize="1sp"
                                        android:layout_gravity="left"
                                        android:layout_width="0dip"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.005"
                                        android:textColor="@color/detColor1" />
                        </LinearLayout>



                        <LinearLayout
                                xmlns:android="http://schemas.android.com/apk/res/android"
                                android:id="@+id/ArtRedTable1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="50dip"
                                        android:layout_weight="0.005" />

                                <ToggleButton
                                        android:id="@+id/tglCantVal"
                                        android:textOn="Cantitate"
                                        android:textOff="Valoare"
                                        android:textSize="16sp"
                                        android:background="@drawable/button_style_1"
                                        style="@style/button_text_1"
                                        android:layout_width="0dip"
                                        android:layout_height="40dip"
                                        android:layout_weight="0.05"
                                        android:layout_gravity="bottom"
                                         />

                                <EditText
                                        android:layout_marginTop="15dp"
                                        android:id="@+id/txtCantArt"
                                        android:layout_width="0dip"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.05"
                                        android:maxLength="10"
                                        android:typeface="monospace"
                                        android:singleLine="true"
                                        android:background="@drawable/edittext_style_1"
                                        android:textColor="@color/editTextColor1"
                                        android:inputType="number|numberDecimal"
                                        android:layout_gravity="left|bottom"
                                        android:gravity="left|bottom"
                                         />

                                <TextView
                                        android:layout_marginLeft="20dp"
                                        android:id="@+id/textUM"
                                        android:typeface="sans"
                                        android:textSize="16sp"
                                        android:text="UM"
                                        android:layout_gravity="right|top"
                                        android:gravity="right|top"
                                        android:layout_width="0dip"
                                        android:layout_height="40dip"
                                        android:layout_weight="0.025"
                                        android:textColor="@color/detColor2" />

                                <Spinner
                                        android:layout_marginLeft="15dp"
                                        android:id="@+id/spinnerUm"
                                        android:layout_width="0dip"
                                        android:layout_height="40dip"
                                        android:layout_weight="0.05"
                                        android:layout_gravity="left|top"
                                        android:typeface="sans"
                                        android:textSize="18sp"
                                        android:textColor="@color/detColor2" />

                                <TextView
                                        android:layout_width="0dip"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.1" />

                        </LinearLayout>

                        <LinearLayout
                                xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">

                                <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="45dip"
                                        android:layout_weight="0.005" />

                                <TextView
                                        android:id="@+id/labelProcRed"
                                        android:layout_width="0dip"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.05"
                                        android:maxLength="30"
                                        android:typeface="sans"
                                        android:textSize="16sp"
                                        android:text="Procent"
                                        android:layout_gravity="left|bottom"
                                        android:gravity="left|bottom"
                                        android:textColor="@color/detColor2" />
                                <EditText
                                        android:id="@+id/txtProcRed"
                                        android:maxLength="5"
                                        android:typeface="monospace"
                                        android:layout_width="0dip"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.05"
                                        android:singleLine="true"
                                        android:background="@drawable/edittext_style_1"
                                        android:textColor="@color/editTextColor1"
                                        android:inputType="number|numberDecimal"
                                        android:layout_gravity="left|bottom" />
                                <TextView
                                        android:layout_width="0dip"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.2" />


                        </LinearLayout>


                </LinearLayout>

        </LinearLayout>

</LinearLayout>
