<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dip"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/listArtCmp"
        android:layout_width="match_parent"
        android:layout_height="250dip"
        android:layout_margin="10dip"
        android:choiceMode="singleChoice"
        android:dividerHeight="1.0sp"
        android:drawSelectorOnTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnSaveCmd"
            style="@style/ok_button"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_gravity="left"
            android:background="@drawable/ok_button_style"
            android:paddingLeft="30dip"
            android:paddingRight="30dip"
            android:text="@string/strSalveazaComanda" />

        <View
            android:layout_width="30dip"
            android:layout_height="match_parent" >
        </View>

        <Button
            android:id="@+id/btnBackToCmd"
            style="@style/ok_button"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_gravity="right"
            android:background="@drawable/cancel_button_style"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:text="@string/strRevenire" />
    </LinearLayout>

</LinearLayout>