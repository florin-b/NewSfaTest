<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@color/backColorCond"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textNrCrt"
            android:layout_width="0dp"
            android:layout_weight="0.04"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:textColor="@color/detColor11"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textNumeArtCond"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_weight="0.4"
            android:textColor="@color/rowColor1"
            android:textStyle="bold"
            android:textSize="14sp"
            android:width="180dip" />

        <TextView
            android:id="@+id/textCantArtCond"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:gravity="right"
            android:textColor="@color/detColor9"
            android:textSize="14sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textUmArtCond"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_marginLeft="5dip"
            android:layout_weight="0.1"
            android:textColor="@color/detColor9"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.04"
            android:layout_height="fill_parent" />

        <TextView
            android:id="@+id/textCodArtCond"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_weight="0.4"
            android:textColor="@color/rowColor1"
            android:textSize="14sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textPretArtCond"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:gravity="right"
            android:textColor="@color/detColor10"
            android:textSize="14sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textMonArtCond"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="5dip"
            android:gravity="left"
            android:layout_weight="0.1"
            android:textColor="@color/detColor10"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>