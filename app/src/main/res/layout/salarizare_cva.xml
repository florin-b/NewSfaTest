            android:textColor="@color/salarizareHeaderTotal"
            android:textSize="16sp"
            android:typeface="monospace" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutCorectIncas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:visibility="invisible"
        android:orientation="horizontal">

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:gravity="left"
            android:paddingLeft="5dip"
            android:text="Corect incas"
            android:textColor="@color/salarizareHeaderTotal"
            android:textSize="16sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/corectIncas"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:gravity="left"
            android:paddingLeft="5dip"
            android:textColor="@color/salarizareHeaderTotal"
            android:textSize="16sp"
            android:typeface="monospace" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutVenitFinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginBottom="5dip"
        android:orientation="horizontal"
        android:visibility="invisible"
        >

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:gravity="left"
            android:paddingLeft="5dip"
            android:text="Venit final"
            android:textColor="@color/salarizareHeaderTotal"
            android:textSize="16sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/venitFinal"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
