<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textDataSalarizare"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="30dip"
        android:gravity="left"
        android:paddingLeft="5dip"
        android:textColor="@color/salarizareHeaderTotal"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:typeface="monospace" />


    <LinearLayout
        android:id="@+id/layoutVenitBaza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="10dip"

        android:visibility="invisible"
        android:orientation="horizontal">

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:gravity="left"
            android:paddingLeft="5dip"
            android:text="Venit baza"
            android:textColor="@color/salarizareHeaderTotal"
            android:textSize="16sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/antetVenitBaza"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:gravity="left"
            android:paddingLeft="5dip"
            android:textColor="@color/salarizareHeaderTotal"
            android:textSize="16sp"
            android:typeface="monospace" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutNruf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:visibility="invisible"
        android:orientation="horizontal">

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:gravity="left"
            android:paddingLeft="5dip"
            android:text="Nruf"
            android:textColor="@color/salarizareHeaderTotal"
            android:textSize="16sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/antetNruf"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:gravity="left"
            android:paddingLeft="5dip"
            android:textColor="@color/salarizareHeaderTotal"
            android:textSize="16sp"
            android:typeface="monospace" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutCoef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:visibility="invisible"
        android:orientation="horizontal">

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:gravity="left"
            android:paddingLeft="5dip"
            android:text="Coef"
            android:textColor="@color/salarizareHeaderTotal"
            android:textSize="16sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/antetCoef"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:gravity="left"
            android:paddingLeft="5dip"
            android:textColor="@color/salarizareHeaderTotal"
            android:textSize="16sp"
            android:typeface="monospace" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutVenitNruf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:visibility="invisible"
        android:orientation="horizontal">

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:gravity="left"
            android:paddingLeft="5dip"
            android:text="Venit nruf"
            android:textColor="@color/salarizareHeaderTotal"
            android:textSize="16sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/venitNruf"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:gravity="left"
            android:paddingLeft="5dip"
            android:textColor="@color/salarizareHeaderTotal"
            android:textSize="16sp"
            android:typeface="monospace" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutVenitTcf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:visibility="invisible"
        android:orientation="horizontal">

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:gravity="left"
            android:paddingLeft="5dip"
            android:text="Venit tcf"
            android:textColor="@color/salarizareHeaderTotal"
            android:textSize="16sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/venitTcf"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
