<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:orientation="vertical" >

        <Spinner
            android:id="@+id/spinnerCmd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/spinner_style_2" />

        <ListView
            android:id="@+id/listArtAprob"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dip"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="7.0sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.4"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="30dip"
            android:layout_marginTop="20dip"
            android:orientation="vertical" >

            <ToggleButton
                android:id="@+id/btnConditii"
                style="@style/ok_button"
                android:layout_width="wrap_content"
                android:layout_height="45dip"
                android:background="@drawable/cancel_button_style"
                android:paddingLeft="40dip"
                android:paddingRight="40dip"
                android:textOff="@string/strConditii"
                android:textOn="@string/strInapoi" />

            <TextView
                android:id="@+id/labelAdresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:textColor="@color/detColor4"
                android:textSize="16sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/textAdresaNoua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dropColor2"
                android:textSize="17sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/textMCantCmd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dip"
                android:textColor="@color/detColor1"
                android:textSize="16sp"
                android:typeface="serif"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textMCant30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:textColor="@color/detColor1"
                android:textSize="16sp"
                android:typeface="serif"
                android:visibility="gone" />

            <TableLayout
                android:id="@+id/tablePalCant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginRight="20dip"
                android:visibility="gone" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textColor="@color/detColor1"
                        android:textSize="16sp"
                        android:typeface="serif" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="right"
                        android:text="Pal"
                        android:textColor="@color/detColor1"
                        android:textSize="16sp"
                        android:typeface="serif" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="right"
                        android:text="Cant"
                        android:textColor="@color/detColor1"
                        android:textSize="16sp"
                        android:typeface="serif" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="right"
                        android:text="Total"
                        android:textColor="@color/detColor1"
                        android:textSize="16sp"
                        android:typeface="serif" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textMarjaPalMoneda"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        
                        android:textColor="@color/detColor1"
                        android:textSize="16sp"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/textMarjaPalVal"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="right"
                        android:textColor="@color/detColor1"
                        android:textSize="16sp"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/textMarjaCantVal"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="right"
                        android:textColor="@color/detColor1"
                        android:textSize="16sp"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/textMarjaTotalVal"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="right"
                        android:textColor="@color/detColor1"
                        android:textSize="16sp"
                        android:typeface="serif" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Marja bruta (%)"
                        android:textColor="@color/detColor1"
                        android:textSize="16sp"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/textMarjaPalProc"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="right"
                        android:textColor="@color/detColor1"
                        android:textSize="16sp"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/textMarjaCantProc"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="right"
                        android:textColor="@color/detColor1"
                        android:textSize="16sp"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/textMarjaTotalProc"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="right"
                        android:textColor="@color/detColor1"
                        android:textSize="16sp"
                        android:typeface="serif" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/textPondereArtB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dip"
                android:textColor="@color/detColor1"
                android:textSize="16sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/textPondereB_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:textColor="@color/detColor1"
                android:textSize="16sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/textValMarjaT1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/detColor1"
                android:textSize="16sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/textProcMarjaT1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:textColor="@color/detColor1"
                android:textSize="16sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/textCastigBrut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/detColor1"
                android:textSize="16sp"
                android:typeface="serif" />

            <LinearLayout
                android:id="@+id/tabelaDetaliiCmd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textMarjaCmd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/detColor1"
                    android:textSize="16sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/textAdresaLivrare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textColor="@color/detColor7"
                    android:textSize="16sp"
                    android:typeface="serif" />
            </LinearLayout>

            <TextView
                android:id="@+id/textTipTransport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/detColor7"
                android:textSize="16sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/textTipReducere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/detColor7"
                android:textSize="16sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/textMetodaPlata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/detColor7"
                android:textSize="16sp"
                android:typeface="serif"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textFilialaClp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/detColor7"
                android:textSize="16sp"
                android:typeface="serif"
                android:visibility="invisible" />


            <TextView
                android:id="@+id/textComandaBV90"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:text="Comanda BV90"
                android:textColor="@color/detColor1"
                android:textSize="16sp"
                android:typeface="serif" />

            <CheckBox
                android:id="@+id/checkEliminaTransp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:text="Cost transport standard distributie"
                android:textColor="@color/detColor1"
                android:textSize="16sp"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabelaConditii"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="80dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="#FFA700"
                    android:text=" Conditii articole "
                    android:textColor="#E7FEFF"
                    android:textSize="15sp"
                    android:typeface="serif" />

                <View
                    android:layout_width="200dip"
                    android:layout_height="1dip"
                    android:background="#FFA700" />
            </LinearLayout>

            <TextView
                android:id="@+id/textNumeArt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="16sp"
                android:typeface="sans"
                android:width="360dip" />

            <TextView
                android:id="@+id/textCodArt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="15sp"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:layout_weight="0.1"
                    android:text="Cantitate"
                    android:textColor="@color/detColor1"
                    android:textSize="16sp"
                    android:typeface="sans" />

                <EditText
                    android:id="@+id/txtCantArt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.1"
                    android:gravity="left"
                    android:inputType="number|numberDecimal"
                    android:maxLength="7"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/txtUmArt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:layout_weight="0.1"
                    android:textColor="@color/detColor1"
                    android:textSize="16sp"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:layout_weight="0.1"
                    android:text="Pret"
                    android:textColor="@color/detColor1"
                    android:textSize="16sp"
                    android:typeface="sans" />

                <EditText
                    android:id="@+id/txtPretArt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.1"
                    android:gravity="left"
                    android:inputType="number|numberDecimal"
                    android:maxLength="7"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/txtMonedaPretArt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:layout_weight="0.1"
                    android:text="RON"
                    android:textColor="@color/detColor1"
                    android:textSize="16sp"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/saveCondArt"
                    style="@style/ok_button"
                    android:layout_width="120dip"
                    android:layout_height="35dip"
                    android:layout_gravity="left"
                    android:background="@drawable/ok_button_style"
                    android:text="@string/strSalveaza" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="#FFA700"
                    android:text=" Conditii comanda "
                    android:textColor="#E7FEFF"
                    android:textSize="15sp"
                    android:typeface="serif" />

                <View
                    android:layout_width="200dip"
                    android:layout_height="1dip"
                    android:background="#FFA700" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:layout_weight="0.1"
                    android:text="Proc. articole B"
                    android:textColor="@color/detColor1"
                    android:textSize="16sp"
                    android:typeface="sans" />

                <EditText
                    android:id="@+id/txtCondCal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.1"
                    android:gravity="left"
                    android:inputType="number|numberDecimal"
                    android:maxLength="7"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:typeface="monospace" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:layout_weight="0.1"
                    android:text="%"
                    android:textColor="@color/detColor1"
                    android:textSize="16sp"
                    android:typeface="sans"
                    android:width="70dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Spinner
                    android:id="@+id/spinnerTipReducere"
                    android:layout_width="0dp"
                    android:layout_height="40dip"
                    android:layout_gravity="right|center"
                    android:layout_weight="0.4"
                    android:textSize="18sp" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05" />

                <Button
                    android:id="@+id/btnComentariiAprob"
                    style="@style/ok_button"
                    android:layout_width="0dip"
                    android:layout_height="35dip"
                    android:layout_weight="0.4"
                    android:background="@drawable/ok_button_style"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:text="Comentarii" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <my.logon.screen.screens.WrappingSlidingDrawer
                android:id="@+id/slidingDrawerAprob"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dip"
                android:content="@+id/contentLayoutCmd"
                android:handle="@+id/slideButtonAprob"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/slideButtonAprob"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:background="@drawable/slideleft32" >
                </Button>

                <LinearLayout
                    android:id="@+id/contentLayoutCmd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/linearborder"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="Conditii:"
                            android:textColor="@color/discountColor1"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:typeface="sans" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dip"
                        android:baselineAligned="false"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="0.4"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:text="Proc. articole B: "
                                    android:textColor="@color/discountColor1"
                                    android:textSize="16sp"
                                    android:typeface="sans" />

                                <TextView
                                    android:id="@+id/textProcCalitAprob"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="4dp"
                                    android:textColor="@color/discountColor1"
                                    android:textSize="16sp"
                                    android:typeface="sans" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:text="%"
                                    android:textColor="@color/discountColor1"
                                    android:textSize="16sp"
                                    android:typeface="sans" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:text="Nr. facturi: "
                                    android:textColor="@color/discountColor1"
                                    android:textSize="16sp"
                                    android:typeface="sans" />

                                <TextView
                                    android:id="@+id/textNrFactAprob"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="4dp"
                                    android:textColor="@color/discountColor1"
                                    android:textSize="16sp"
                                    android:typeface="sans" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="0.3"
                            android:orientation="vertical" >

                            <Button
                                android:id="@+id/btnCommAprob"
                                style="@style/button_text_1"
                                android:layout_width="wrap_content"
                                android:layout_height="40dip"
                                android:layout_gravity="left"
                                android:background="@drawable/button_style_3"
                                android:paddingLeft="15dip"
                                android:paddingRight="15dip"
                                android:text="Comentarii" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dip" >

                        <ListView
                            android:id="@+id/listArtCondAprob"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:choiceMode="singleChoice"
                            android:dividerHeight="1.0sp"
                            android:drawSelectorOnTop="true"
                            android:scrollbarStyle="outsideInset" />
                    </LinearLayout>
                </LinearLayout>
            </my.logon.screen.screens.WrappingSlidingDrawer>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>