<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dip"
        android:layout_marginTop="7dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textNumeArticol"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dip"
            android:layout_weight="0.6"
            android:textColor="@color/listArticol"
            android:textSize="17sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textData"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.1"
            android:textColor="#7A7A7A"
            android:textSize="15sp"
            android:typeface="monospace" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textCodArticol"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dip"
            android:layout_weight="0.4"
            android:textColor="@color/listCodArticol"
            android:textSize="14sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/observatii"
            style="@style/det_button"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_gravity="left"
            android:layout_marginRight="50dip"
            android:background="@drawable/cancel_button_style"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:text="Observatii" />

        <View
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />

        <Button
            android:id="@+id/adaugaPret"
            style="@style/det_button"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_gravity="left"
            android:layout_marginLeft="10dip"
            android:background="@drawable/cancel_button_style"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:text="Actualizeaza pret" />

        <TextView
            android:id="@+id/textValoare"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="20dip"
            android:layout_weight="0.1"
            android:focusable="true"
            android:imeOptions="actionDone"
            android:text="Adauga pret"
            android:textColor="#1E1E1E"
            android:textSize="17sp"
            android:typeface="monospace" />
    </LinearLayout>

</LinearLayout>