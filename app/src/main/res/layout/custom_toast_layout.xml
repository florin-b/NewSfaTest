<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toast_layout"
    android:layout_width="100dip"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_toast_border"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1.5px"
        android:layout_marginRight="1.5px"
        android:layout_marginTop="1.5px"
        android:layout_marginBottom="1.5px"
         />

    <TextView
        android:id="@+id/textMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1px"
        android:layout_marginLeft="1px"
        android:layout_marginRight="1px"
        android:background="#FFEC8B"
        android:gravity="right"
        android:paddingLeft="80dip"
        android:textColor="#00688B"
        android:textSize="17sp"
        android:typeface="sans" />

</LinearLayout>