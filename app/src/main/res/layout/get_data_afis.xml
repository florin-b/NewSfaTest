<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#E8E8E8"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="1dip"
    android:rotation="180" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_marginTop="40dip"
        android:orientation="vertical" >

        <TextView
            android:layout_width="350dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@color/backColorObiective1"
            android:text="Agent"
            android:textColor="@color/foreColorObiective1"
            android:textSize="16sp"
            android:typeface="serif" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/backColorObiective1" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textAgentLog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="50dip"
            android:layout_weight="0.1"
            android:gravity="left"
            android:textColor="@color/dropColor2"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinnerFiliala"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_weight="0.1"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="10dip"
            android:layout_weight="0.02"
            android:gravity="left" />

        <Spinner
            android:id="@+id/spinnerAgenti"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.15"
            android:scrollbarStyle="outsideInset" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="10dip"
            android:layout_weight="0.2"
            android:gravity="left" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_marginTop="30dip"
        android:orientation="vertical" >

        <TextView
            android:layout_width="350dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@color/backColorObiective1"
            android:text="Interval"
            android:textColor="@color/foreColorObiective1"
            android:textSize="16sp"
            android:typeface="serif" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/backColorObiective1" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtDataStartSel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:layout_weight="0.04"
            android:background="@drawable/edittext_style_1"
            android:gravity="center"
            android:maxLength="65"
            android:singleLine="true"
            android:textColor="@color/editTextColor1"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="10dip"
            android:layout_weight="0.02"
            android:gravity="left" />

        <TextView
            android:id="@+id/txtDataStopSel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:layout_weight="0.04"
            android:background="@drawable/edittext_style_1"
            android:gravity="center"
            android:maxLength="65"
            android:singleLine="true"
            android:textColor="@color/editTextColor1"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="10dip"
            android:layout_weight="0.2"
            android:gravity="left" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_marginTop="30dip"
        android:orientation="vertical" >

        <TextView
            android:layout_width="350dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@color/backColorObiective1"
            android:text="Obiective"
            android:textColor="@color/foreColorObiective1"
            android:textSize="16sp"
            android:typeface="serif" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/backColorObiective1" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/radioTipOb"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.2"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioDeschise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Deschise"
                android:textColor="@color/detColor4"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/radioInchise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dip"
                android:text="Inchise"
                android:textColor="@color/detColor4"
                android:textSize="16sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_marginTop="30dip"
        android:orientation="vertical" >

        <TextView
            android:layout_width="350dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@color/backColorObiective1"
            android:text="Stadiu lucrari"
            android:textColor="@color/foreColorObiective1"
            android:textSize="16sp"
            android:typeface="serif" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/backColorObiective1" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/spinnerStadiuLucrari"
            android:layout_width="0dp"
            android:layout_height="45dip"
            android:layout_gravity="bottom|left"
            android:layout_weight="0.1"
            android:background="@drawable/dropdown_style_1"
            android:gravity="left" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="10dip"
            android:layout_weight="0.2"
            android:gravity="left" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="50dip"
        android:layout_marginTop="10dip"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnCautaObiective"
            style="@style/button_text_1"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_gravity="right"
            android:background="@drawable/button_style_1"
            android:paddingLeft="40dip"
            android:paddingRight="40dip"
            android:text="@string/strCauta" />
    </LinearLayout>

</LinearLayout>