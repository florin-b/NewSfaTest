<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backColorArtList"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textNumeArt"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.4"
            android:textColor="@color/rowColor1"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textCantArt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.1"
            android:gravity="right"
            android:textColor="@color/detColor1"
            android:textSize="16sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textUmArt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.05"
            android:gravity="right"
            android:textColor="@color/detColor1"
            android:textSize="16sp"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textCodArt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.1"
            android:textColor="@color/rowColor1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textTipArt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.3"
            android:textColor="@color/statusCmdColor"
            android:textSize="16sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textProcent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.1"
            android:gravity="right"
            android:textColor="@color/cmpColor1"
            android:textSize="16sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/labelProcent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.05"
            android:gravity="right"
            android:text="RON"
            android:textColor="@color/cmpColor1"
            android:textSize="16sp"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textData1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.4"
            android:gravity="right"
            android:textColor="@color/cmpColor1"
            android:textSize="16sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textData2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.1"
            android:gravity="right"
            android:textColor="@color/cmpColor1"
            android:textSize="16sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textData3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.05"
            android:gravity="right"
            android:textColor="@color/cmpColor1"
            android:textSize="16sp"
            android:typeface="monospace" />
    </LinearLayout>

</LinearLayout>