<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/textNumeFiliala"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dip"
        android:layout_weight="0.06"
        android:textColor="@color/cmpColor1"
        android:textSize="17sp"
        android:typeface="sans" />

    <Spinner
        android:id="@+id/spinnerTipTransport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.5"
        android:textColor="@color/black" />

    <ImageButton
        android:id="@+id/detalii_cost"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dip"
        android:layout_marginRight="10dip"
        android:layout_weight="0.05"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/question"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/label_macara"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dip"
        android:layout_weight="0.13"
        android:textColor="#44524b"
        android:textSize="16sp"
        android:typeface="serif"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/cost_macara"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dip"
        android:layout_weight="0.13"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:textColor="@color/cost_transp_text"
        android:textSize="16sp"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:typeface="monospace"
        android:visibility="invisible" />


</LinearLayout>






