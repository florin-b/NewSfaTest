<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:orientation="horizontal" >

        <TextView
            style="@style/ShadowTextStyle"
            android:layout_width="150dp"
            android:layout_height="45dip"
            android:layout_gravity="center|left"
            android:layout_marginLeft="10dip"
            android:text="Agent:"
            android:textSize="19sp" />

        <Spinner
            android:id="@+id/spinnerFilialaAdrese"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinnerAgentiAdrese"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:scrollbarStyle="outsideInset" />

        <TextView
            android:id="@+id/textAgent"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="20dip"
            android:gravity="left"
            android:textColor="@color/dropColor2"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <TextView
            style="@style/ShadowTextStyle"
            android:layout_width="150dp"
            android:layout_height="45dip"
            android:layout_gravity="center|left"
            android:layout_marginLeft="10dip"
            android:text="Adrese:"
            android:textSize="19sp" />

        <RadioGroup
            android:id="@+id/radioTipAdresa"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioNecompletate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Necompletate"
                android:textColor="@color/detColor4"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/radioCompletate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:text="Completate"
                android:textColor="@color/detColor4"
                android:textSize="16sp" />
        </RadioGroup>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <View
            android:layout_width="150dp"
            android:layout_height="45dip"
            android:layout_marginLeft="10dip" />

        <ListView
            android:id="@+id/listAdrese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dip"
            android:choiceMode="singleChoice"
            android:dividerHeight="0.0sp"
            android:fastScrollAlwaysVisible="true"
            android:fastScrollEnabled="true"
            android:scrollbarStyle="outsideInset" />
    </LinearLayout>

</LinearLayout>