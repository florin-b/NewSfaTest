<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dip"
                        android:layout_weight="0.005" />

                <EditText
                        android:id="@+id/txtNumeClient"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.3"
                        android:background="@drawable/edittext_style_1"
                        android:textColor="@color/editTextColor1"
                        android:inputType="textNoSuggestions"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:textSize="19sp"
                        android:typeface="monospace" />


                <Button
                        android:id="@+id/clientBtn"
                        style="@style/button_text_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_weight="0.1"
                        android:background="@drawable/button_style_1"
                        android:text="@string/strCauta" />

                <ToggleButton
                        android:id="@+id/tglTipClient"
                        android:layout_marginLeft="15dp"
                        android:textOn="Individual"
                        android:textOff="@string/strGrupClnt"
                        style="@style/button_text_1"
                        android:background="@drawable/button_style_5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_weight="0.1" />



        </LinearLayout>

        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dip"
                android:orientation="horizontal">

                <ListView
                        android:id="@+id/listClntRed"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.55"
                        android:choiceMode="singleChoice"
                        android:drawSelectorOnTop="false" />

                <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.35"
                        android:orientation="vertical">

                        <TextView
                                android:typeface="sans"
                                android:textSize="16sp"
                                android:text="Cod client"
                                android:id="@+id/labelCodClient"
                                android:layout_gravity="left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/detColor1" />

                        <TextView
                                android:id="@+id/textCodClient"
                                android:typeface="sans"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_gravity="left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/detColor1" />

                        <TextView
                                android:typeface="sans"
                                android:textSize="16sp"
                                android:id="@+id/labelNumeClient"
                                android:text="Nume client"
                                android:layout_gravity="left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/detColor1" />

                        <TextView
                                android:id="@+id/textNumeClient"
                                android:typeface="sans"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_gravity="left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/detColor1" />

                        <TextView
                                android:typeface="sans"
                                android:textSize="16sp"
                                android:id="@+id/labelAdrClient"
                                android:text="Adresa"
                                android:layout_gravity="left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/detColor1" />

                        <TextView
                                android:id="@+id/textAdrClient"
                                android:typeface="sans"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:text=""
                                android:layout_gravity="left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/detColor1" />

                        <TextView
                                android:typeface="sans"
                                android:textSize="16sp"
                                android:id="@+id/labelLimitaCredit"
                                android:text="Limita credit"
                                android:layout_gravity="left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/detColor1" />

                        <TextView
                                android:id="@+id/textLimitaCredit"
                                android:typeface="monospace"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:text=""
                                android:layout_gravity="left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/detColor1" />

                        <TextView
                                android:typeface="sans"
                                android:textSize="16sp"
                                android:id="@+id/labelRestCredit"
                                android:text="Rest credit"
                                android:layout_gravity="left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/detColor1" />

                        <TextView
                                android:id="@+id/textRestCredit"
                                android:typeface="monospace"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:text=""
                                android:layout_gravity="left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/detColor1" />

                </LinearLayout>

        </LinearLayout>

</LinearLayout>
