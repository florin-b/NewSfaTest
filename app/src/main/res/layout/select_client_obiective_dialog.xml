<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/textNumeClient"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:inputType="textNoSuggestions"
            android:maxLength="30"
            android:singleLine="true"
            android:textSize="19sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/btnCautaClient"
            style="@style/ok_button"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dip"
            android:layout_weight="0.2"
            android:background="@drawable/cancel_button_style"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="@string/strCauta" />

        <RadioGroup
            android:id="@+id/radioClientIP"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <RadioButton
                android:id="@+id/radioConstruct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Inst.publice" />

            <RadioButton
                android:id="@+id/radioNonConstruct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non-constr." />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/listClientiObiective"
            android:layout_width="match_parent"
            android:layout_height="300dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="10dip"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="right"
            android:src="@drawable/cancel_icon_32" />
    </LinearLayout>

</LinearLayout>