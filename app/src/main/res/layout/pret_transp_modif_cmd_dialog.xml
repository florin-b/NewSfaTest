<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textEtichetaLinie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        android:textColor="@color/detColor1"
        android:textSize="18sp"
        android:layout_margin="20dip"
        android:typeface="sans" />


    <EditText
        android:id="@+id/textValoareLinie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dip"
        android:gravity="left"
        android:maxLength="10"
        android:inputType="numberDecimal"
        android:textColor="#7f5327"
        android:textSize="17sp" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:textColor="@color/rowColor1"
            android:textSize="18sp"
            android:layout_margin="15dip"
            android:typeface="sans" />

        <Button
            android:id="@+id/btnSave"
            style="@style/ok_button"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:background="@drawable/ok_button_style"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:text="@string/strSalveaza" />
    </LinearLayout>

</LinearLayout>