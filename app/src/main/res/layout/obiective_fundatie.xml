<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="0.45"
        android:orientation="vertical" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="55dip"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textCurrentPage"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.2"
                android:textColor="#008100"
                android:textSize="17sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <RadioGroup
                android:id="@+id/radioConstructori"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dip"
                android:layout_weight="0.3"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/radioFundatie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Fundatie si suprastructura"
                    android:textColor="#008100"
                    android:typeface="sans" />

                <RadioButton
                    android:id="@+id/radioFinisaje"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Finisaje"
                    android:textColor="#008100"
                    android:typeface="sans" />
            </RadioGroup>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="0.45"
                android:orientation="horizontal" >

                <Spinner
                    android:id="@+id/spinnerFinisaj"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01" />

                <Spinner
                    android:id="@+id/spinnerInterior"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/buttonAdaugaClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@android:color/transparent"
                android:src="@drawable/add_client" />
        </LinearLayout>

        <ListView
            android:id="@+id/listObiectiveFundatie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="7.0sp" />
    </LinearLayout>

</LinearLayout>