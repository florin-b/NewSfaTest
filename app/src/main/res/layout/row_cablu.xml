<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="1dip"
    android:paddingTop="1dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textNumeBoxa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.3"
            android:gravity="left"
            android:textColor="@color/customColor2"
            android:textSize="19sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/labelStoc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.1"
            android:gravity="right"
            android:text="Stoc"
            android:textColor="@color/color_light_blue"
            android:textSize="18sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textStoc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.1"
            android:gravity="right"
            android:textColor="@color/color_light_blue"
            android:textSize="18sp"
            android:typeface="monospace" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center" >

            <CheckBox
                android:id="@+id/checkSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutUtilizat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="3dip"
        android:orientation="horizontal"
        android:visibility="invisible"
         >

        <TextView
            android:id="@+id/labelUtilizat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:gravity="right"
            android:text="Utilizat"
            android:textColor="@color/color_light_green"
            android:textSize="18sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textUtilizat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.1"
            android:gravity="right"
            android:textColor="@color/color_light_green"
            android:textSize="18sp"
            android:typeface="monospace" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" >
        </View>
    </LinearLayout>

</LinearLayout>