<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutModifPretClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/labelPretClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="Pret client: "
            android:textColor="@color/detColor1"
            android:textSize="19sp"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/txtPretClient"
            android:layout_width="140dp"
            android:layout_height="45dip"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittext_style_1"
            android:inputType="number|numberDecimal"
            android:maxLength="30"
            android:singleLine="true"
            android:textColor="@color/editTextColor1"
            android:textSize="19sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/txtMonNegociat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="RON"
            android:textColor="@color/detColor1"
            android:textSize="19sp"
            android:typeface="monospace" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnOkPret"
            style="@style/button_text_1"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_gravity="left"
            android:layout_marginTop="30dp"
            android:layout_weight="0.5"
            android:background="@drawable/button_style_1"
            android:text="Ok" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <Button
            android:id="@+id/btnCancelPret"
            style="@style/button_text_1"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_weight="0.3"
            android:background="@drawable/button_style_4"
            android:text="Inchide" />
    </LinearLayout>

</LinearLayout>