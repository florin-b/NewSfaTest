<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textAn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:gravity="left"
            android:text="An"
            android:textColor="#A66D33"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textLuna"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:gravity="left"
            android:text="Luna"
            android:textColor="#A66D33"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textVanz03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:gravity="right"
            android:text="Vanz 03"
            android:textColor="#A66D33"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textVanz06"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:gravity="right"
            android:text="Vanz 06"
            android:textColor="#A66D33"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textVanz07"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:gravity="right"
            android:text="Vanz 07"
            android:textColor="#A66D33"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textVanz09"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:gravity="right"
            android:text="Vanz 09"
            android:textColor="#A66D33"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textVanz040"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:gravity="right"
            android:text="Vanz 040"
            android:textColor="#A66D33"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textVanz041"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dip"
            android:layout_weight="0.1"
            android:gravity="right"
            android:text="Vanz 041"
            android:textColor="#A66D33"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/listIstoric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnOk"
        style="@style/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_gravity="right"
        android:layout_marginRight="5dip"
        android:background="@drawable/ok_button_style"
        android:paddingLeft="40dip"
        android:paddingRight="40dip"
        android:text="Ok" />

</LinearLayout>