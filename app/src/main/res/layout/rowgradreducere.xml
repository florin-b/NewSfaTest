<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backColorCmdList"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/nrCrt"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_weight="0.03"
            android:text=""
            android:textColor="@color/rowColor1"
            android:textSize="17sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textClient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.05"
            android:textColor="@color/rowColor1"
            android:textSize="17sp"
            android:textStyle="bold"
            android:typeface="sans"
            android:width="285dp" />

        <TextView
            android:id="@+id/textCodClient"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.05"
            android:textColor="@color/rowColor1"
            android:textSize="1sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textIdRed"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="0.05"
            android:textColor="@color/rowColor1"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textDataStart"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.01"
            android:textColor="@color/detColor1"
            android:textSize="15sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textDataStop"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.01"
            android:textColor="@color/detColor1"
            android:textSize="15sp"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textAgent"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.1"
            android:textColor="@color/statusCmdColor"
            android:textSize="15sp"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textNumeArt"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.2"
            android:textColor="@color/rowColor1"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.01" />

        <TextView
            android:id="@+id/textCantArt"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.05"
            android:textColor="@color/detColor1"
            android:textSize="15sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textUmArt"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.02"
            android:textColor="@color/detColor1"
            android:textSize="15sp"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textCodArt"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.15"
            android:textColor="@color/rowColor1"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textTipArt"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.05"
            android:textColor="@color/statusCmdColor"
            android:textSize="1sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textPozArt"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.01"
            android:textColor="@color/black"
            android:textSize="1sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textProcent"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.05"
            android:textColor="@color/cmpColor1"
            android:textSize="15sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/labelProcent"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.02"
            android:text=""
            android:textColor="@color/cmpColor1"
            android:textSize="15sp"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textData1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.02"
            android:textColor="@color/detColor4"
            android:textSize="15sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textData2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.02"
            android:textColor="@color/detColor4"
            android:textSize="15sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textData3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.02"
            android:text=""
            android:textColor="@color/detColor4"
            android:textSize="15sp"
            android:typeface="sans" />

        <View
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.1" />
    </LinearLayout>

</LinearLayout>