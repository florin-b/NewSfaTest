<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/radioGroupValNeg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:checked="false"
                android:text="DA"
                android:textColor="@color/detColor1"
                android:textSize="17sp"
                android:typeface="sans" >
            </RadioButton>

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="60dip"
                android:checked="true"
                android:text="NU"
                android:textColor="@color/detColor1"
                android:textSize="17sp"
                android:typeface="sans" >
            </RadioButton>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutValNegociat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop = "20dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/labelValNegociat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="Valoare totala negociata: "
            android:textColor="@color/detColor1"
            android:textSize="19sp"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/txtValNegociat"
            android:layout_width="140dp"
            android:layout_height="45dip"
            android:layout_marginLeft="10dp"
            android:inputType="number|numberDecimal"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/editTextColor1"
            android:textSize="19sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/txtMonNegociat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="RON"
            android:textColor="@color/detColor1"
            android:textSize="19sp"
            android:typeface="monospace" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop = "25dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnOkValNeg"
            style="@style/ok_button"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginTop="30dp"
            android:background="@drawable/ok_button_style"
            android:text="Ok" />
    </LinearLayout>

</LinearLayout>